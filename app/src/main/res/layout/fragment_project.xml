<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/text_margin">

        <ImageView
            android:id="@+id/project_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/project_icon_description"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_margin"
            android:layout_toEndOf="@id/project_icon"
            android:text="Hello world"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/android:list"
        android:name="fr.socket.flo.todo.view.AllProjectsFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        tools:context="fr.socket.flo.todo.view.mainFragments.ProjectFragment"
        tools:listitem="@layout/fragment_project_row"/>

</LinearLayout>