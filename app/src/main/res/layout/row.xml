<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/activity_main_row_selector">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/rowProgressIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="@dimen/row_margin_borders"
            android:tint="@android:color/tertiary_text_light"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/rowProjectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginStart="@dimen/row_margin_borders"
            android:layout_marginTop="@dimen/list_text_margin"
            android:layout_marginBottom="@dimen/list_text_margin"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/rowProjectRemainingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/tertiary_text_light"
        android:layout_marginStart="20dp"
        android:layout_marginTop="@dimen/list_text_margin"
        android:layout_marginBottom="@dimen/list_text_margin"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        />

</RelativeLayout>
